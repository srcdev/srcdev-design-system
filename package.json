{
  "name": "srcdev-design-system",
  "private": true,
  "type": "module",
  "scripts": {
    "cleanup": "rm -rf node_modules package-lock.json .nuxt dist",
    "build": "npm run build:i18n && nuxt build",
    "build:i18n": "node scripts/build-i18n.mjs",
    "build:i18n-json": "node scripts/build-i18n-json.mjs",
    "build:i18n:watch": "node scripts/build-i18n.mjs --watch",
    "build:i18n-json:watch": "node scripts/build-i18n-json.mjs --watch",
    "dev": "concurrently \"npm run build:i18n:watch\" \"nuxt dev\" --names \"i18n,nuxt\" --prefix-colors \"cyan,green\"",
    "dev:nuxt-only": "nuxt dev",
    "generate": "npm run build:i18n && nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "4.1.2",
    "@iconify-json/gravity-ui": "1.2.10",
